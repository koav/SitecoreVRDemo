@using SC91.Feature.Product.Entities
@model SC91.Feature.Product.Models.ProductViewModel
@{
    Layout = null;
}



<!-- Scene -->
<a-scene id="sitecore-demo">

    <!-- Demo assets -->
    <a-assets>
        <a-asset-item id="sitecore-obj" src="@Model.Product.GetVrObjectLink()"></a-asset-item>
        <a-asset-item id="sitecore-mtl" src="@Model.Product.GetVrModelLink()"></a-asset-item>
    </a-assets>


    <!-- Sitecore logo -->
    <a-entity scale="0.5 0.5 0.5" rotation="0 -90 0" obj-model="obj: #sitecore-obj; mtl: #sitecore-mtl"
              position="0 0.5 0"
              shadow="cast: true; receive: true"
              animation="property: rotation; to: 0 1 0; loop: true; dur: 30000; easing: linear; isRawProperty:true">
    </a-entity>

    <!-- Creates the ground -->
    <a-plane rotation="-90 0 0" width="200" height="200" color="#eee" shadow="cast: true; receive: true"></a-plane>

    <!-- Sky -->
    <a-sky color="#f9f9f9" radius="1000"></a-sky>

    <a-light type="directional" color="#FFF" intensity="0.6" position="5 4 3"></a-light>
    <a-light type="ambient" color="#FFF"></a-light>

    <!-- Camera -->
    <a-entity camera="userHeight:1.8;" wasd-controls look-controls position="0 1.5 3"></a-entity>
    <!-- <a-scene stats></a-scene> -->

</a-scene>
